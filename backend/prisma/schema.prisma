generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("VIEWER") // ADMIN, SALES, SUPPORT, VIEWER
  company   String?
  phone     String?
  active    Boolean  @default(true)
  resetToken String?
  resetTokenExpiry DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  organizationId String @default("org1")

  ticketsAssigned Ticket[]
  deals           Deal[]
  activities      Activity[]
}

model Client {
  id        String   @id @default(uuid())
  name      String
  email     String?
  phone     String?
  company   String?
  address   String?
  nit       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  organizationId String @default("org1")

  // New fields requested by frontend
  sector          String?   @default("Privado")
  assignedAdvisor String?
  tags            String[]
  companyPhone    String?
  extension       String?

  tickets Ticket[]
  deals   Deal[]
}

model Ticket {
  id          String         @id @default(uuid())
  title       String
  description String
  status      String   @default("Recibida") // Recibida, En Proceso, Finalizada
  priority    String   @default("Media") // Baja, Media, Alta, Urgente
  department  String   @default("General") // New field
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  organizationId String @default("org1")

  clientId String?
  client   Client? @relation(fields: [clientId], references: [id])

  assignedToId String?
  assignedTo   User?   @relation(fields: [assignedToId], references: [id])

  deletedAt      DateTime?
  deletionReason String?
  
  requesterId String?
}

model Deal {
  id          String    @id @default(uuid())
  title       String
  value       Float
  stage       String    @default("LEAD") // LEAD, CONTACTED, PROPOSAL, NEGOTIATION, CLOSED_WON, CLOSED_LOST
  probability Int       @default(0)
  expectedCloseDate DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  organizationId String @default("org1")

  clientId String
  client   Client @relation(fields: [clientId], references: [id])

  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id])
  activities Activity[]

  // Purchase Order Fields
  purchaseOrderFile      String? // Base64 or URL
  purchaseOrderFileName  String?
  purchaseOrderStatus    String? @default("active") // active, void
}

model Product {
  id          String   @id @default(uuid())
  name        String
  sku         String   @unique
  price       Float
  stock       Int      @default(0)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  organizationId String @default("org1")
}

model Activity {
  id          String   @id @default(uuid())
  type        String // Llamada, Correo, WhatsApp, Reunion, Visita TÃ©cnica
  description String
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  organizationId String @default("org1")

  dealId String
  deal   Deal   @relation(fields: [dealId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id])
}
